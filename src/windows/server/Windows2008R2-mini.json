{
  "variables": {
    "iso_repo": "{{env `VAGRANT_ISO_REPO_URI`}}",
    "box_repo": "{{env `VAGRANT_BOX_REPO_URI`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_repo`}}/windows_server_2008_r2.iso",
      "iso_checksum_type": "none",
      "iso_checksum": "",
      "headless": false,
      "boot_wait": "2m",
      "http_directory": "http",
      "http_port_min":"8080",
      "http_port_max":"8080",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "2h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows2008_64",
      "disk_size": 61440,
      "floppy_files": [
        "./floppy/Windows2008R2-mini/Autounattend.xml",
        "./floppy/Windows2008R2-mini/Install.ps1",
        "./floppy/Common/InstallHelpers.psm1",
        "./floppy/VirtualBox/VMParams.ps1",
        "./floppy/VirtualBox/VMInstall.ps1"
      ],
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "cmd.exe /c powershell.exe -File A:/VMInstall.ps1" ]
    },
    {
      "type": "shell",
      "inline": [ "rm -rf /tmp/*" ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{user `box_repo`}}/Windows2008R2-mini-{{.Provider}}.box",
      "vagrantfile_template": "vagrant/Windows2008R2-mini.template"
    }
  ]
}
